<!DOCTYPE html>
<html lang="en">

<body>
    <%- title %>
        <ul>
            <% messages.forEach(function(message) { %>
                <li>
                    <strong>
                        <%= message.author %>
                    </strong>: <%= message.message %>
                        <a href="/messages/<%= message.id %>">Open</a>
                </li>
                <% }); %>
        </ul>
        <a href="/new">Submit a new message</a>
        <!-- <%- include('form')%> -->
</body>

</html>